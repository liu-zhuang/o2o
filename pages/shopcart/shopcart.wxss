.address {
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-flow: row nowrap;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 10rpx 0;
  align-content: center;
}

.address .imgLocation {
  width: 42rpx;
  height: 60rpx;
  flex: 0 0 42rpx;
}

.address .shipTo {
  flex: 1 1 auto;
  height: 60rpx;
  color: rgba(128, 128, 128, 1);
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  display: flex;
  align-content: center;
}

.address .imgArrow {
  width: 32rpx;
  height: 55rpx;
  flex: 0 0 32rpx;
}

.split {
  width: 100%;
  height: 20rpx;
  background-color: RGB(248, 248, 248);
}
